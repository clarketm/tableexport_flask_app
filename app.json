{
  "name": "TableExport + Flask app",
  "description": "A simple app demonstrating the use of TableExport and Flask.",
  "addons": ["heroku-postgresql:hobby-dev"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "FLASK_APP": "/app/autoapp.py",
    "FLASK_DEBUG": "0"
  },
  "scripts": {
    "postdeploy": "sh setup-db.sh"
  }
}